<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/stinner_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:elevation="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNIVERSITY FACILITY"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:layout_marginLeft="20dp"/>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/date_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_calendar"/>




        <TextView
            android:layout_marginHorizontal="16dp"
            android:id="@+id/date_tv"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="원하시는 날짜를 선택해주세요."
            android:layout_height="wrap_content" />
    </LinearLayout>


        <android.support.design.widget.TabLayout
            android:id="@+id/inner_layout_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:background="#FFFFFF"
            app:tabTextColor="@color/colorAccent"
            app:tabGravity="center"
            app:tabMode="scrollable"
            app:tabRippleColor="#E7E5E5"
            app:tabSelectedTextColor="@color/external_point"
            app:tabIndicatorColor="@color/external_point"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/inner_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp" />



</LinearLayout>