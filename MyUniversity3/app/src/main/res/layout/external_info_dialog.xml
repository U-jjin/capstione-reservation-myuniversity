<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:elevation="@dimen/app_bar_height"
        android:id="@+id/externaldialog_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="가게 세부정보"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="@color/external_point"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="2.0"
        android:shadowColor="#33000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">


        <TextView
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="#111111"
                    android:shadowDx="5.0"
                    android:shadowDy="5.0"
                    android:shadowRadius="2.0"
                    android:shadowColor="#33000000"
                    android:text="주소"
                    android:textSize="20dp"/>

        <ImageButton
            android:layout_marginHorizontal="8dp"
            android:id="@+id/externaldialog_map_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:background="@drawable/ic_map" />

        <TextView
                android:layout_weight="3"
                android:layout_marginHorizontal="8dp"
                android:id="@+id/externaldialog_address_tv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="주소가 입력될 예정"/>

    </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="12dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="전화번호"
                android:textSize="20dp"
                android:textColor="#111111"
                android:shadowDx="5.0"
                android:shadowDy="5.0"
                android:shadowRadius="2.0"
                android:shadowColor="#33000000"/>

            <TextView
                android:layout_margin="8dp"
                android:layout_weight="5"
                android:id="@+id/externaldialog_tel_tv"
                android:layout_width="0dp"
                android:layout_height="50dp" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="4dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="영업시간"
            android:textSize="20dp"
            android:textColor="#111111"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"/>


        <TextView
            android:layout_marginLeft="8dp"
            android:layout_weight="5"
            android:id="@+id/externaldialog_operating_tv"
            android:layout_width="0dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/externaldialog_reservation_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:text="예약가능"
            android:textColor="#111111" />

        <TextView
            android:layout_marginRight="16dp"
            android:id="@+id/externaldialog_takeout_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포장가능"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:textColor="#111111"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="16dp"
            android:id="@+id/externaldialog_card_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카드가능"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:textColor="#111111" />
        <TextView
            android:layout_marginRight="16dp"
            android:id="@+id/externaldialog_cash_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현금가능"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:textColor="#111111" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="16dp"
            android:id="@+id/externaldialog_toss_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현금이체가능"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:textColor="#111111" />

        <TextView
            android:id="@+id/externaldialog_bank_tv"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="우리은행:1002547002402"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:textColor="#111111" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/externaldialog_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/externalinfo_ok_btn"
            android:shadowColor="#33000000"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:gravity="center"
            android:text="확인"
            android:textSize="20dp"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</LinearLayout>