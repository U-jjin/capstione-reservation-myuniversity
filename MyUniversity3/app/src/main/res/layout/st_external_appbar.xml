<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/stexternal_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXTERNAL FACILITY"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:gravity="center"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_close_black" />
        <TextView
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="영업준비중"/>

        <ImageView
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_relax_green"/>
        <TextView
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="여유"/>

        <ImageView
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_soso_yellow"/>
        <TextView
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="보통"/>

        <ImageView
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_busy_red"/>
        <TextView
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="혼잡"/>
    </LinearLayout>

    <TextView
        android:id="@+id/external_restaurant_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/st_main_request_ripple"
        android:gravity="center"
        android:shadowColor="#33000000"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="2.0"
        android:text="RESTAURANT"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

    <LinearLayout
        android:gravity="center"
        android:id="@+id/external_reslist_linear"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:orientation="vertical">
        <ListView
            android:layout_marginVertical="8dp"
            android:elevation="6dp"
            android:background="#FFFFFF"
            android:id="@+id/external_listview"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#8AE0DCDC"
            android:textFilterEnabled="true"
            android:dividerHeight="1dp"/>

    </LinearLayout>


    <TextView
        android:background="@drawable/st_main_request_ripple"
        android:id="@+id/external_othershop_tv"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="OTHERSHOPS"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="2.0"
        android:shadowColor="#33000000"
        android:layout_gravity="center"/>


    <LinearLayout
        android:gravity="center"
        android:id="@+id/external_otherlist_linear"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:orientation="vertical">

        <ListView
            android:background="#FFFFFF"
            android:layout_marginVertical="8dp"
            android:id="@+id/external_othershops_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#8AE0DCDC"
            android:elevation="6dp"
            android:textFilterEnabled="true"
            android:layout_marginHorizontal="16dp"
            android:dividerHeight="1dp"/>


    </LinearLayout>

</LinearLayout>